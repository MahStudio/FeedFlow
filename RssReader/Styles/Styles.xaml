                                                <EasingDoubleKeyFrame KeyTime="0:0:2.333"
                                                                      Value="{Binding TemplateSettings.EllipseAnimationWellPosition, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                                <SplineDoubleKeyFrame KeySpline="0.4,0,0.6,1"
